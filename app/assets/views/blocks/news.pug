section.news
  .news__header
    .icon.icon--clock
    .news__title Latest news
    .btns-spacer
      a.btn.btn--pseudo(href="#!") See all

  ul.news__list
    each item, i in news
      li.news__item
        .news__item-time-wrapper
          time.news__item-time.humble= item.date

        .news__item-title-wrapper
          h2.title
            a.news__item-title(href="#!")= item.title

          .news__item-info
            a.humble.humble--comments.humble--tiny.humble--comments_bold(href="#!") 44

  .btn--block
    button.btn.btn--arrow-down-before.btn--light.btn--large.btn--show Show more news