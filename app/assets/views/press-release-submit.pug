extends layouts/layout.pug

block title
    title Press Release Submit | U

block content
    .main-aside-container
        .main-block
            .infoblock
                .infoblock__item
                    h1 Submit your Press release on U.Today

                    p Distribute news about your products by publishing press-release on U.Today.

                    p Get All benefits for the lowest price of $600 for the submission.

                    p Still have questions? Feel free to contact U.Today sales team at <a href="mailto:ads@u.today">ads@u.today</a>

                    .table-plan
                        .table-plan__header
                            .table-plan__col
                            .table-plan__col Press release

                        each item in tablePrice
                            .table-plan__row
                                .table-plan__col= item[0]
                                if item[3]

                                .table-plan__col
                                    .icon.icon--check

                        .table-plan__footer
                            .table-plan__col Cost
                            .table-plan__col $600*

        include blocks/aside.pug
