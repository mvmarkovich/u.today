include ../inc/var.pug

doctype html
html(lang="en" dir="ltr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=5")

        link(rel="apple-touch-icon", sizes="180x180", href="img/favicon/apple-touch-icon.png")
        link(rel="icon", type="image/png", sizes="32x32", href="img/favicon/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="img/favicon/favicon-16x16.png")
        link(rel="manifest", href="/img/favicon/site.webmanifest")
        link(rel="mask-icon", href="img/favicon/safari-pinned-tab.svg", color="#263238")
        link(rel="shortcut icon", href="/img/favicon/favicon.ico")
        link(rel="stylesheet" type="text/css" href="libs/slick/slick.css")
        link(rel="stylesheet" type="text/css" href="libs/slick/slick-theme.css")
        meta(name="msapplication-TileColor", content="#263238")
        meta(name="msapplication-config", content="img/favicon/browserconfig.xml")
        meta(name="theme-color", content="#263238")
        block title

        block head
            link(rel="stylesheet" href="styles/article-test.css")

    body

        header.header
            .header__container
                a.header__logo(href="#!") U.TODAY

                nav.header__nav
                    ul.header__nav-list
                        each category, i in nav
                            li.header__nav-item(class=[category.childs ? 'header__nav-item--arrow' : ''] class=[i == 1 ? 'header__nav-item--active' : ''])
                                a.header__nav-link(href="/" + i)= category.name

                                if category.childs
                                    ul.header__nav-child-list
                                        each child, i in category.childs
                                            li.header__nav-child-item
                                                a.header__nav-child-link(href="#!c" + i)= child.name

                .header__panel
                    button.header__btn-search.btn.btn--light.btn--search(aria-label="open search form")

                    .header__lang
                        .btn.btn--light.btn--arrow-down.header__lang-btn
                            a.tabs__btn.btn.btn--light.is-active(href='#' hreflang='en') ENG

                        .header__lang-other
                            a.tabs__btn.btn.btn--light(href='#' hreflang='ru') RU

                    button.header__burger.btn.btn--light.btn--burger(aria-label="open/close menu")

                .header__search
                    form.header__search-form(action="#" method="get")
                        button.header__search-submit.btn.btn--light.btn--search(type="submit")
                        input.header__search-input(type="text" placeholder="Type..." name="search")
                        button.header__search-close.btn.btn--light.btn--cross

        .mobile-menu-cover

        .page-container.container
            block content

        block foot
            script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js")

            script(src="scripts/main.js")
