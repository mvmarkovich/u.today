extends layouts/layout.pug

block title
    title Price index | u.today

block content
    .main-aside-container.index-price
        aside.aside-menu-block
            .price-index__aside
                .price-index__header
                    button.btn.btn--arrow-down-before.btn--pseudo Choose coin
                .price-index__table
                    .price-index__title Coins
                    .price-index__tabs.tabs.tabs--small
                        .price-index__tabs-item
                            .price-index__title Daily
                        .price-index__tabs-item
                            .price-index__title Monthly
                .price-index__body
                    ul.tabs.tabs--vertical
                        each coin in indexCoins
                            li.tabs__item
                                a.tabs__btn.btn.btn--pseudo(href="#!")= coin.name
                                .price-index__coin-short= coin.short
                                .price-index__coin-trand(class=coin.coin_daily__trand === false ? 'price-index__coin-trand--down' : '')= coin.price_daily
                                .price-index__coin-trand(class=coin.coin_monthly__trand === false ? 'price-index__coin-trand--down' : '')= coin.price_monthly
        .main-category-block
            h1.title Bitcoin BTC Price Index
